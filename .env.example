# ============================================================================
# Environment Variables for CubeX Application
# ============================================================================
# Copy this file to .env and fill in the values
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your values
# ============================================================================

# ==========================================================================
# Application Settings
# ==========================================================================
SECRET_KEY=change-me-in-production-use-a-strong-random-key
LOG_LEVEL=INFO

# ==========================================================================
# Database Configuration
# ==========================================================================
DATABASE_URL=postgresql+asyncpg://cubex:cubex@localhost:5432/cubex
POSTGRES_USER=cubex
POSTGRES_PASSWORD=cubex
POSTGRES_DB=cubex
POSTGRES_PORT=5432

# ==========================================================================
# Redis Configuration
# ==========================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# ==========================================================================
# RabbitMQ Configuration
# ==========================================================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ==========================================================================
# API Configuration
# ==========================================================================
API_PORT=8000

# ==========================================================================
# Email Configuration (Brevo)
# ==========================================================================
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=CubeX

# ==========================================================================
# OAuth - Google
# ==========================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ==========================================================================
# OAuth - GitHub
# ==========================================================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# ==========================================================================
# OTP Configuration
# ==========================================================================
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=10

# ==========================================================================
# Rate Limiting Configuration
# ==========================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
